
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URI")
}

model User {
  @@map("user")
  mongo_id  String   @id @default(auto()) @map("_id") @db.ObjectId
  id        String   @unique
  email     String   @unique
  name      Name?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

type Name {
  firstName String
  lastName  String
}
