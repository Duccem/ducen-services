{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "outDir": "./dist",
    "lib": [
      "es6"
    ],
    "declaration": true,
    "declarationMap": true,
    "target": "ES2021",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
  },
  "exclude": [
    "node_modules",
    "dist",
  ]
}
